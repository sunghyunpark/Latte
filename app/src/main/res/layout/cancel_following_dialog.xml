<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_shape"
    >

    <ImageView
        android:id="@+id/user_profile_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_img"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <!--구분선-->
    <LinearLayout
        android:id="@+id/divider_lay"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_below="@+id/dialog_txt"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:background="#ffe0e0e0"></LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_below="@+id/divider_lay">
        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginRight="0.5dp"
            android:onClick="buttonPressed"
            android:text="예"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#ffe0e0e0"></LinearLayout>
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="0.5dp"
            android:onClick="buttonPressed"
            android:text="아니오"/>
    </LinearLayout>
</RelativeLayout>
