<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_shape"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/user_profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="1dp"
            android:background="@drawable/profile_round_shape_appcolor"/>

        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_profile_img"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/user_profile_img"
            android:layout_marginTop="5dp"
            android:paddingRight="30dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:paddingRight="30dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/user_profile_img"
            android:layout_below="@+id/user_name_txt"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/cancel_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <!--구분선-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="#ffe0e0e0"></LinearLayout>

    <TextView
        android:id="@+id/empty_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textColor="#000000"
        android:text="@string/self_introduce_empty_txt"/>

    <TextView
        android:id="@+id/self_introduce_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#000000"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/website_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:autoLink="web"
        android:textColorLink="@color/AppBasicColor"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>
</LinearLayout>
