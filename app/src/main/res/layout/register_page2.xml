<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_page2_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="login.Register_Page2">

    <RelativeLayout
    android:id="@+id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="#22ffffff"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/back_btn_white"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="회원가입"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <!--회원가입 텍스트 + 로고
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/logo_text_img"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_text_img"/>
    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/logo_text_img"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/logo_text_img"
        android:text="회원가입"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    </RelativeLayout>
    -->
    <!--로고만 있는 경우
    <ImageView
        android:id="@+id/logo_text_img"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_text_img"/>
        -->
    <Button
        android:id="@+id/register_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:textColor="#ffffff"
        android:text="다음"/>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/register_layout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_bar"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_img_layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_profile_shape">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="1dp"
                android:background="@drawable/register_profile_shape"/>

            <ImageView
                android:id="@+id/profile_plus_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile_plus_img"/>
            <TextView
                android:id="@+id/profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="사진"
                android:layout_centerHorizontal="true"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profile_plus_img"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/name_edit_box"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="이름"
            android:textColor="#ffffff"
            android:textColorHint="#55ffffff"
            android:paddingLeft="20dp"
            android:background="@drawable/login_btn_transparent"/>

        <LinearLayout
            android:id="@+id/gender_layout"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/male_select_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="남자"
                android:textColor="#ffffff"
                android:background="@drawable/login_btn_transparent"/>
            <Button
                android:id="@+id/female_select_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="여자"
                android:textColor="#ffffff"
                android:background="@drawable/login_btn_transparent"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/background_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_layout"
        android:layout_marginTop="50dp"/>


</RelativeLayout>
