<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:id="@+id/content_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/profile_img">

            <TextView
                android:id="@+id/content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_below="@+id/content_text_layout"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/content_text_layout"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/content_pic1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/content_pic2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="1dp"/>
                <ImageView
                    android:id="@+id/content_pic3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="2dp"/>
                <ImageView
                    android:id="@+id/content_pic4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="0.5dp"
                android:visibility="gone"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/content_pic5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/content_pic6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="1dp"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:id="@+id/content_pic7"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="2dp"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:id="@+id/content_pic8"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <!--구분선-->
    <LinearLayout
        android:id="@+id/divider_lay"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentBottom="true"
        android:background="#ffe0e0e0"></LinearLayout>
</LinearLayout>