<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/AppBasicColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="타임라인"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contents_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffe0e0e0"
            android:layout_below="@+id/title_bar"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="0.25dp"
                android:background="#ffffff">
                <Button
                    android:id="@+id/follow_btn"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="팔로잉"
                    android:textSize="15dp"
                    android:textColor="@color/BlackColor"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/follow_underbar"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/follow_btn"
                    android:background="#000000"></LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.25dp"
                android:layout_weight="1"
                android:background="#ffffff">
                <Button
                    android:id="@+id/all_btn"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/GrayColor"
                    android:text="둘러보기"/>
                <LinearLayout
                    android:id="@+id/all_underbar"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/all_btn"

                    android:background="@null"></LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:requiresFadingEdge="horizontal" />
    </LinearLayout>
</RelativeLayout>
