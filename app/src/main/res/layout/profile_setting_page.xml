<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/title_bar"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/back_btn_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/back_btn"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:textSize="17sp"
                    android:text="프로필 수정"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/AppBasicColor"
                    android:text="저장"
                    android:background="@null"/>
            </RelativeLayout>
            <!--구분선-->
            <LinearLayout
                android:id="@+id/divider_lay"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="#ffe0e0e0"></LinearLayout>

            <!--최상단 내 프로필 및 대문 사진 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/my_profile_edit_btn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:padding="1dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/profile_round_shape_appcolor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프로필 사진 바꾸기"
                        android:textSize="14dp"
                        android:layout_below="@+id/my_profile_edit_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/AppBasicColor"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/background_edit_btn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:padding="1dp"
                        android:background="@drawable/myplace_background_shape"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대문 사진 바꾸기"
                        android:layout_below="@+id/background_edit_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/AppBasicColor"/>

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"/>
            <!--구분선-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="#ffe0e0e0"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/name_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/name_edit_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/name_img"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:hint="이름"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/nick_name_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/nick_name_edit_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/nick_name_img"
                        android:layout_marginLeft="20dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:ellipsize="end"
                        android:paddingRight="15dp"
                        android:hint="닉네임"
                        android:textColor="#000000"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/website_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/website_edit_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/website_img"
                        android:layout_marginLeft="20dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:ellipsize="end"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:hint="웹사이트" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp">
                    <ImageView
                        android:id="@+id/introduce_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/introduce_edit_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/introduce_img"
                        android:layout_marginLeft="20dp"
                        android:hint="소개글"
                        android:ellipsize="end"
                        android:paddingRight="15dp"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 정보"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"/>
            <!--구분선-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="#ffe0e0e0"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/email_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/email_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/email_img"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:textColor="@color/AppBasicColor"
                        android:hint="이메일"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/phone_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/phone_edit_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/phone_img"
                        android:layout_marginLeft="20dp"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:ellipsize="end"
                        android:paddingRight="15dp"
                        android:hint="휴대폰 번호"
                        android:textColor="#000000"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/gender_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/gender_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/gender_img"
                        android:layout_marginLeft="20dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:hint="성별" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp">
                    <ImageView
                        android:id="@+id/birth_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/birth_edit_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/birth_img"
                        android:layout_marginLeft="20dp"
                        android:hint="생년월일(yymmdd)"
                        android:inputType="date"
                        android:ellipsize="end"
                        android:paddingRight="15dp"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
